<%- include("./partials/header") %>
    <div class="container">
        <h1 class="header">Guitar Inventory</h1>
        <div class="row">
            <div class="col s12 m6">
                <div class="card blue-grey darken-1">
                    <div class="card-image">
                        <img class="materialboxed" width="300px" src="/<%= singleImg.img %>.jpg" alt="<%= singleImg.idx%>">
                    </div>
                </div>
            </div>
            <div class="col s12 m6">
                <p>Resize your image:</p>
                <form method="get" action="/images/">
                    <div class="row">
                        <div class="input-field col s6">
                            <i class="material-icons prefix">mode_edit</i>
                            <input id="imgWidth" name="width" class="validate" />
                            <label for="imgWidth">Perferred Width</label>
                        </div>
                        <div class="input-field col s6">
                            <i class="material-icons prefix">mode_edit</i>
                            <input id="imgHeight" name="height" class="validate" />
                            <label for="imgHeight">Perferred Height</label>                        
                        </div>
                    </div>
                    <input type="hidden" class="hidden" name="filename" value="<%= singleImg.img %>">
                    <button class="btn waves-effect waves-light" type="submit">Resize
                        <i class="material-icons right">send</i>
                    </button>  
                </form>
            </div>
        </div>
    </div>
<%- include("./partials/footer") %>